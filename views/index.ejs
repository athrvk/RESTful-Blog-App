<%- include('partials/header') %>

<div class='ui main text container'>
	
	<div class='ui huge header text-center p-4'>RESTful Blog App</div>
	
	<div class='ui top attached segment'>
		
		<div class='ui divided items'>
			
			<% blogs.forEach(function(blog){ %>
			<div class='item'>
				
				<div class='image rounded align-self-center'>
					<img src = "<%=blog.image%>">
				</div>
				
				<div class='content'>
					
					<a class='header' href='/blogs/<%= blog._id%>'><%=blog.title%></a>
					
					<div class='meta text-muted'>
						<span><%=blog.created.toDateString()%></span>
					</div>
					
					<div class='description'>
						<p class='lead'>
							<%=blog.body.substring(0,100)%>...
						</p>
					</div>
					
					<div id='readMoreBtn' class='extra'>
						<a class='ui floated primary button' href='/blogs/<%= blog._id%>'>
							Read More
							<i class='right chevron icon'></i>
						</a>
					</div>
					
				</div>
			</div>
			<% }) %>
		</div>
	</div>
</div>


<%- include('partials/footer') %>
